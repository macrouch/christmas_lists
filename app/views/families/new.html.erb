<%= form_for @family, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>
      New Family
    </legend>

    <% if @family.errors.any? %>
      <div class='error_explanation'>
        <h2><%= pluralize(@family.errors.count, "error") %> prohibited this family from being saved:</h2>

        <ul>
        <% @family.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class='control-group'>
      <%= f.label :name, class: 'control-label' %>
      <div class='controls'>
        <%= f.text_field :name %>
      </div>
    </div>

    <div class='control-group'>
      <%= f.label :question, class: 'control-label' %>
      <div class='controls'>
        <%= f.text_field :question %>
      </div>
    </div>

    <div class='control-group'>
      <%= f.label :answer, class: 'control-label' %>
      <div class='controls'>
        <%= f.text_field :answer %>
      </div>
    </div>

    <div class='form-actions'>
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Cancel', families_path, class: 'btn' %>
    </div>

  </fieldset>

<% end %>
