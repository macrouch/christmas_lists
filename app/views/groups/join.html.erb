<div class="col-md-5">
  <%= form_tag("/join_group/#{@group.id}", method: "post", class: 'form-horizontal') do %>
    <fieldset>
      <div class="page-header"><h3>Joining <%= @group.name %></h3></div>

      <% if @group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@group.errors.count, "error") %> prohibited this list from being saved:</h2>

          <ul>
          <% @group.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group'>
        <label class="col-sm-2 control-label">Question</label>
        <div class='col-sm-10'>
          <span class="form-control"><%= @group.question %></span>
        </div>
      </div>

      <div class='form-group'>
        <label for="answer" class="col-sm-2 control-label">Answer</label>
        <div class='col-sm-10'>
          <input type="text", id="answer", name="answer" class="form-control" />
        </div>
      </div>
    </fieldset>

    <div class='form-group'>
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag 'Join', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
