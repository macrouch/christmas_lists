<div class='hidden-desktop hidden-tablet'>
  <dl>
    <dt>Table of Contents</dt>
    <% @lists.each do |list| %>
      <dd><%= link_to list.name, "##{name_to_id(list.name)}" %></dd>
    <% end %>
  </dl>
</div>
<div class='container'>
  <div class='row'>
    <% @lists.each_with_index do |list, index| %>
      <!-- keep 4 lists per row -->
      <% if index > 0 && index % 4 == 0 %>
        </div>
        <div class='row'>
      <% end %>

      <div id='<%= name_to_id(list.name) %>' class='span3 list'>
        <div>
          <div class='list-header'>
            <h3 class='list-name'><%= list.name %></h3>
            <p class='owner'>Owner: <%= list.user.name if list.user %></p>
            <p class='actions'><%= link_to 'Add Item', new_list_item_path(list), class: 'btn' %> <%= link_to 'Edit List', edit_list_path(list), class: 'btn' %></p>
          </div>
          <dl>
            <% list.items.each do |item| %>
              <%= render partial: 'item_view', locals: {list: list, item: item} %>
            <% end %>
          </dl>
            <div class='hidden-desktop hidden-tablet back-to-top'>
            <%= link_to 'Back to top', '#', class: 'icon-chevron-up' %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
