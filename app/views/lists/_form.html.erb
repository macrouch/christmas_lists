<%= form_for([@collection, @list], html: {class: 'form-horizontal'}) do |f| %>
  <fieldset>
    <legend>
      <% if params[:action] == 'new' %>
        New List
      <% else %>
        Editing <%= @list.name %>
      <% end %>
    </legend>
    
    <% if @list.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

        <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class='control-group'>
      <%= f.label :name, class: 'control-label' %>
      <div class='controls'>
        <%= f.text_field :name %>
      </div>
    </div>

    <div class='control-group'>
      <%= f.label :user_id, 'Owner', class: 'control-label' %>
      <div class='controls'>
        <%= f.collection_select :user_id, @users, :id, :name, { include_blank: 'Select Owner/Not Listed' } %>
      </div>
    </div>
  </fieldset>
  <div class='form-actions'>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', collection_path(@collection), class: 'btn' %>
  </div>
<% end %>
