<div class="col-md-3">
  <%= form_for([@collection, @list], html: {class: 'form-horizontal'}) do |f| %>
    <fieldset>
      <legend>
        <% if params[:action] == 'new' %>
          New List
        <% else %>
          Editing <%= @list.name %>
        <% end %>
      </legend>

      <% if @list.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

          <ul>
          <% @list.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group'>
        <%= f.label :name, class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :user_id, 'Owner', class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.collection_select :user_id, @users, :id, :name, { include_blank: 'Select Owner/Not Listed' }, class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <div class='form-group'>
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancel', collection_path(@collection), class: 'btn btn-default' %>
      </div>
    </div>

  <% end %>
</div>
