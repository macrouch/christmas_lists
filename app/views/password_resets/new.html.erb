<%= form_tag password_resets_path, method: :post, class: 'form-horizontal' do %>
  <fieldset>
    <div class="page-header"><h3>Reset Password</h3></div>
  </fieldset>

  <div class="form-group">
    <%= label_tag :email, 'Email', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8">
      <%= text_field_tag :email, params[:email], class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= submit_tag "Reset Password", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
