<p>
  <%= link_to "Create an account", new_identity_path %> or login below.
</p>

<%= form_tag "/auth/identity/callback", class: 'form-horizontal', role: 'form' do %>
  <div class="form-group">
    <%= label_tag :auth_key, "Email", class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= text_field_tag :auth_key, nil, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password", class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= submit_tag "Login",  class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
