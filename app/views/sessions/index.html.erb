<div class="login-header">
  <%= link_to "", '/auth/google_oauth2', class: 'btn google-login-button' %><%= link_to "", '/auth/facebook', class: 'btn facebook-login-button' %>
  <p>Don't use these services? <%= link_to "Create an account here", new_identity_path %> or login below.</p>
</div>

<%= form_tag "/auth/identity/callback", class: 'form-horizontal', role: 'form' do %>
  <div class="form-group">
    <%= label_tag :auth_key, "Email", class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= text_field_tag :auth_key, nil, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password", class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= link_to 'forgot password?', new_password_reset_path %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= submit_tag "Login",  class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
